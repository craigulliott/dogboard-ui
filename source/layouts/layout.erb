<!doctype html>
<html class="no-js" data-ng-app="DogboardUiApp" id="ng-app">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title data-ng-bind="pageTitle + ' | DogBoard'">DogBoard</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <%= stylesheet_link_tag "all" %>

    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js' %>
  </head>
  <body>

    <header>
      <img src="/images/logo.png" height="116"/>
      <h1>{{pageHeader}}</h1>
    </header>

    <div id="view" data-ng-view class="my-special-animation"></div>

    <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular.min.js' %>
    <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-animate.min.js' %>
    <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.min.js' %>

    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.6.0/ui-bootstrap-tpls.min.js' %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.2.1/lodash.min.js' %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/moment.js/2.3.1/moment.min.js' %>

    <%= javascript_include_tag  "all" %>

  </body>
</html>